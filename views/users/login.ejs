<% layout("/layouts/boilerplate.ejs") %>

<div class="row mt-3">
    <div class="col-6 offset-3">
        <h1 class="mb-3">Log In for Wanderlust</h1>
        <form action="/login" method="post" class="needs-validation" id="login-form" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" name="username" class="form-control" required minlength="3" maxlength="20">
            </div>

     

            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="password" class="form-control" required minlength="6">
            </div>

            <button type="Login" class="btn btn-success">Login</button>
        </form>
    </div>
</div>

<script>
    (() => {
        'use strict';

        // Fetch the form
        const form = document.getElementById('login-form');

        // Prevent submission and apply custom Bootstrap validation styles
        form.addEventListener('submit', (event) => {
            if (!form.checkValidity()) {
                event.preventDefault();
                event.stopPropagation();
            }

            form.classList.add('was-validated');
        }, false);
    })();
</script>
